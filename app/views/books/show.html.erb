<% if @book.errors.any? %>
<%= @book.errors.count %>
<ul>
  <% @book.errors.full_messages.each do |message| %> errors prohibited this obj from being saved:
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>







<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/edit', user: @users %>
      <%= render 'books/new', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@users.id) do %>
              <%= image_tag @books.user.get_profile_image(100, 100) %><br><%= @books.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@books.id) do %>
              <%= @books.title %>
              <% end %>
            </td>
            <td>
              <%= @books.body %>
            </td>
            <% if @books.user == current_user %>
            <td>
              <%= link_to "Edit", edit_book_path(@books) %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@books), method: :delete %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

</div>













