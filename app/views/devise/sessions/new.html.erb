<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>Log in</h2>
      <form action="/users/sign_in" accept-charset="UTF-8" method="post"><input type="hidden" name="authenticity_token" value="2uZxXlOD0KcknXHXHqYR8hNQvQQkj-DEKIzTWt-Jv6_LqINYeihO1wCIFHvNEG-NFY0zuBKYjHCTMIPVpeDYpQ" autocomplete="off">
        <%= form_with model: @user, url: user_session_path do |f| %>
        <div class="field">
          <label for="user_name">Name</label><br>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"name" %>
        </div>
        <div class="field">
          <label for="user_password">Password</label><br>
          <%= f.password_field :password, autocomplete: "current-password", class:"password" %>
        </div>
        <div class="field">
            <input name="user[remember_me]" type="hidden" value="0" autocomplete="off"><input type="checkbox" value="1" name="user[remember_me]" id="user_remember_me">
            <label for="user_remember_me">Remember me</label>
        </div>
        <div class="actions">
          <% if devise_mapping.rememberable? %>
            <input type="submit" name="commit" value="Log in" class="btn btn-sm btn-primary" data-disable-with="Log in">
          <% end %>
        </div>
        <% end %>
      </form>
    </div>
  </div>
</div>

